[Unit]
Description=BigBlueButton HTML5 service
Wants=redis-server.service mongod.service disable-transparent-huge-pages.service
After=syslog.target network.target mongod.service etherpad.service disable-transparent-huge-pages.service

[Service]
Type=simple
ExecStart=/usr/share/meteor/bundle/systemd_start.sh
WorkingDirectory=/usr/share/meteor/bundle
StandardOutput=syslog
StandardError=syslog
User=meteor
Group=meteor
CPUSchedulingPolicy=fifo
Nice=19

[Install]
WantedBy=multi-user.target

